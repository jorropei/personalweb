---
import Layout from '../layouts/Layout.astro';
import ProfileImage from '../components/ProfileImage.astro';
import ExperienceCarousel from '../components/ExperienceCarousel.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="Jorge Roche - Portfolio">
  <main>
    <!-- Hero Section -->
    <section id="home" class="relative min-h-screen flex items-center justify-center text-center px-6 overflow-hidden">
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -left-40 w-80 h-80 bg-[var(--apple-blue)] opacity-20 rounded-full blur-[100px]"></div>
        <div class="absolute -bottom-40 -right-40 w-80 h-80 bg-purple-600 opacity-20 rounded-full blur-[100px]"></div>
      </div>
      
      <div class="relative max-w-4xl mx-auto">
        <div class="glow-container relative inline-block">
          <span class="block text-7xl md:text-8xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400">
            Hello,
          </span>
          <div class="mt-4">
            <h2 class="text-3xl md:text-4xl font-semibold">
              <span class="text-white opacity-80">I'm</span>
              <span class="text-[var(--apple-blue)]"> Jorge Roche.</span>
            </h2>
          </div>
          <p class="mt-8 text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
            A creative problem-solver bridging platforms and user experiences.
          </p>
          
          <div class="absolute bottom-[-120px] left-1/2 transform -translate-x-1/2">
            <div class="animate-bounce flex flex-col items-center">
              <span class="text-gray-400 text-sm mb-2">Scroll to explore</span>
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <!-- About Section -->
      <section id="about" class="py-24">
        <div class="relative">
          <div class="hidden lg:block absolute -right-20 -top-[10rem]">
            <ProfileImage />
          </div>
          <h2 class="text-4xl sm:text-5xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400">About me</h2>
          <div class="mt-4 max-w-xl">
            <div class="space-y-6 text-justify">
              <p class="text-lg sm:text-xl text-gray-300 leading-relaxed">
                A product specialist with a passion for creating intuitive digital experiences. With a background spanning fintech and food delivery platforms, I bring a unique perspective to product development and user experience design.
              </p>
              <p class="text-lg sm:text-xl text-gray-300 leading-relaxed">
                My approach combines analytical thinking with creative problem-solving, always focusing on delivering solutions that make a real impact for users and businesses alike.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Experience Section -->
      <section id="experience" class="py-24">
        <h2 class="text-5xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400 mb-12">Experience</h2>
        <ExperienceCarousel />
      </section>

      <!-- Projects Section -->
      <section id="projects" class="py-24">
        <h2 class="text-5xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400 mb-12">Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <ProjectCard 
            title="Company Projects" 
            description="Accomplishments in my corporate experience."
            className="company-projects"
            projects={[
              {
                image: '/foodora_project.png',
                title: 'foodora rebranding across EU',
                description: 'Led the rebranding initiative across multiple European markets, ensuring consistent brand implementation.',
                skills: ['Stakeholder management', 'Brand Strategy', 'Cross-market Coordination']
              },
              {
                image: '/pandapro.jpg',
                title: 'Subscriptions in Cart screen',
                description: 'Coordinated the ideation, development and roll out of the subscription function at the cart screen',
                skills: ['Project management', 'UX', 'Figma']
              },
              {
                image: '/yemek_rebrand.jpg',
                title: 'Yemeksepeti Platform Migration',
                description: 'Coordinated the successful migration of the Yemeksepeti platform, biggest platform migration to date at Delivery Hero',
                skills: ['Project Management', 'Technical Migration', 'User Experience']
              }
            ]}
          />
          <ProjectCard 
            title="Side Projects" 
            description="Personal ventures and creative endeavours."
            className="side-projects"
            projects={[
              {
                image: '/wishlist.png',
                title: 'Wishlist App',
                description: 'A web application for tracking gift wishlists, enabling family and friends to coordinate present-giving.',
                skills: ['React', 'Node.js', 'User Experience', 'Full-stack Development']
              },
              {
                image: '/fisioterapia.png',
                title: 'Physiotherapy Clinic Website',
                description: 'Developed a modern, responsive website for a physiotherapy clinic in Spain, improving their online presence and patient engagement.',
                skills: ['HTML/CSS', 'JavaScript', 'Responsive Design', 'SEO']
              },
              {
                image: '/basket.jpg',
                title: 'ProB Bundesliga Basketball',
                description: 'Professional basketball player in the German ProB league.',
                skills: ['Team Leadership', 'Performance', 'Competition']
              },
              {
                image: '/running.jpg',
                title: 'Freelance Model',
                description: 'Professional modeling work for various brands and campaigns.',
                skills: ['Brand Representation', 'Professional Modeling', 'Creative Direction']
              }
            ]}
          />
        </div>
      </section>

      <!-- Contact Section -->
      <section id="contact" class="py-24">
        <h2 class="text-5xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400 mb-12">Contact</h2>
        <div class="bg-[#1C1C1E] p-8 rounded-2xl">
          <div class="space-y-6">
            <p class="flex items-center gap-3 text-xl">
              <span class="text-gray-400">Email:</span>
              <a href="mailto:roche.peinado@hotmail.com" class="text-[var(--apple-blue)] hover:text-white transition-colors">
                roche.peinado@hotmail.com
              </a>
            </p>
            <p class="flex items-center gap-3 text-xl">
              <span class="text-gray-400">LinkedIn:</span>
              <a href="https://www.linkedin.com/in/jorge-roche-peinado/" target="_blank" rel="noopener noreferrer" 
                 class="text-[var(--apple-blue)] hover:text-white transition-colors">
                Jorge Roche Peinado
              </a>
            </p>
          </div>
        </div>
      </section>
    </div>

    <!-- Footer -->
    <footer class="border-t border-gray-800 mt-24 py-16">
      <div class="max-w-5xl mx-auto px-6">
        <div class="grid md:grid-cols-[2fr,1fr,1fr] gap-12">
          <!-- Brand Column -->
          <div class="space-y-4">
            <h3 class="text-2xl font-semibold bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400">
              Jorge Roche
            </h3>
            <p class="text-gray-400 leading-relaxed">
              Crafting intuitive digital experiences that bridge the gap between users and technology.
            </p>
            <p class="text-sm text-gray-500">
              Â© {new Date().getFullYear()} Jorge Roche. All rights reserved.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="text-gray-300 font-medium mb-4">Navigation</h4>
            <ul class="space-y-3">
              <li>
                <a href="#home" class="text-gray-400 hover:text-white transition-colors">Home</a>
              </li>
              <li>
                <a href="#about" class="text-gray-400 hover:text-white transition-colors">About</a>
              </li>
              <li>
                <a href="#experience" class="text-gray-400 hover:text-white transition-colors">Experience</a>
              </li>
              <li>
                <a href="#projects" class="text-gray-400 hover:text-white transition-colors">Projects</a>
              </li>
              <li>
                <a href="#contact" class="text-gray-400 hover:text-white transition-colors">Contact</a>
              </li>
            </ul>
          </div>

          <!-- Social Links -->
          <div>
            <h4 class="text-gray-300 font-medium mb-4">Connect</h4>
            <ul class="space-y-3">
              <li>
                <a 
                  href="https://www.linkedin.com/in/jorge-roche-peinado/" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  LinkedIn
                </a>
              </li>
              <li>
                <a 
                  href="mailto:roche.peinado@hotmail.com"
                  class="text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  Email
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .glow-container {
    position: relative;
  }
  
  .glow-container::after {
    content: '';
    position: absolute;
    inset: -100px;
    background: radial-gradient(circle, rgba(41, 151, 255, 0.1) 0%, transparent 70%);
    z-index: -1;
  }

  .profile-image-container {
    aspect-ratio: 1/1;
    width: 100%;
    border-radius: 24px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
  }

  .profile-image-container :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .profile-image-container:hover :global(img) {
    transform: scale(1.02);
  }
</style>